{
    "name": "shippinno/template",
    "description": "A small package for handling template text files.",
    "type": "library",
    "authors": [
        {
            "name": "Hirofumi Tanigami",
            "email": "hirofumi.tanigami@shippinno.co.jp",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.1",
        "liquid/liquid": "^1.4",
        "league/flysystem": "^3.15.0",
        "league/flysystem-memory": "^3.15.0",
        "twig/twig": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "mockery/mockery": "^1.2",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Shippinno\\Template\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shippinno\\Template\\": "tests/"
        }
    }
}
